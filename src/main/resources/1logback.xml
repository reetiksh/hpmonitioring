<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="HOME_LOG" value="applicationLogs/app.log" />
	<appender name="FILE-ROLLING"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${HOME_LOG}</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>applicationLogs/archived/app.%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<!-- each archived file, size max 10MB -->
			<maxFileSize>10MB</maxFileSize>
			<!-- total size of all archive files, if total size > 20GB, it will delete 
				old archived file -->
			<totalSizeCap>20GB</totalSizeCap>
			<!-- 120 days to keep -->
			<maxHistory>120</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d %p %c{1} [%t] %m%n</pattern>
		</encoder>
	</appender>
	<logger name="org.springframework" level="INFO" />
	<logger name="com.hp.gstreviewfeedbackapp" level="debug"
		additivity="false">
		<appender-ref ref="FILE-ROLLING" />
	</logger>
	<logger name="com.hp.gstreviewfeedbackapp" level="INFO"
		additivity="false">
		<appender-ref ref="FILE-ROLLING" />
	</logger>
	<root level="error">
		<appender-ref ref="FILE-ROLLING" />
	</root>
</configuration>